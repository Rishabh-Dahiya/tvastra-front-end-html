<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/contactus.css" type="text/css">
    <script src="/js/map.js"></script>
    <link href="/css/reset.css" type="text/css" rel="stylesheet">
    <link href="/css/theme.css" type="text/css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/4fd1383274.js" crossorigin="anonymous"></script>
   
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAp9Qn4lYOmefbfA_xM5WsBzlLIYrVSagY&callback=initMap"
  type="text/javascript"></script>
    <title>CONTACT US </title>
</head>
<body>
    <%- include ('./header.ejs') %>  
    <%- include ('./flashmessages.ejs') %>
        <div class="hero-background">
            <div class="subject">
                <h2>Contact Us</h2>
                <p>Home / Contact Us</p>
            </div>
        </div>
        <section class="main">
            <div class="parent-container">
                <div class="map" id="map"></div>
                <div class="grid">
                   <div class="contact-details">
                       <div class="contact-info">
                           <div class="icon">
                            <i class="fas fa-home"></i>
                           </div>
                           <div class="detail">
                            <div class="priamry-info"><h6>Noida, India</h6></div>
                            <div class="secondary-info">Sector 45</div>
                           </div>

                       </div>
                       <div class="contact-info">
                        <div class="icon">
                         <i class="fas fa-phone"></i>
                        </div>
                        <div class="detail">
                         <div class="priamry-info"><h6>00(440)9865562</h6></div>
                         <div class="secondary-info">Mon to Fri 9am to 6pm</div>
                        </div>
                        
                    </div>
                    <div class="contact-info">
                        <div class="icon">
                         <i class="fas fa-home"></i>
                        </div>
                        <div class="detail">
                         <div class="priamry-info"><h6>support@tvastra.com</h6></div>
                         <div class="secondary-info">Send us your query at any time</div>
                        </div>
                        
                    </div>
                   </div>
                   <form action="/feedbackmessages" method="POST">
                       <div class="contact-form">
                        <div class="form-grid">
                            <div class="input-box" id="name">
                                <input type="text" name="name"  placeholder="Enter your name">
                            </div>
                            <div class="input-box"  id="email">
                                <input type="email" name="email" placeholder="Enter email address">
                            </div>
                            <div class="input-box" id="subject">
                                <input type="text" name="subject"  placeholder="Enter subject">
                            </div>
                            <div class="input-box "id="message">
                                <input type="text" name="message"  placeholder="Enter Message">
                            </div>
                        </div>
                        <div class="btn">
                            <button class="primary-light" type="submit">Send Message</button>
                        </div>
                       </div>
                   </form>
                </div>
            </div>
        </section>
        <footer>
            <section class="ft-main">
                <div class="first-footer">
                    <figure class="ft-logo">
                        <img src="https://s3.ap-south-1.amazonaws.com/appdev.konfinity.com/css/tasks/footer.png" alt="Tvastra Logo">
                    </figure>
                
                    <div class="foot-list">
                        <ul class="foot-li">
                            <li><a href="doctor.ejs">Doctor</a></li>
                            <li><a href="hospital.ejs">Hospital</a></li>
                            <li><a href="treatment.ejs">Treatment</a></li>
                            <li><a href="healthy.ejs">Other Services</a></li>
                            <li><a href="faq.ejs">FAQ's</a></li>
                        </ul>
                    </div>
                </div>
                <div class="footer1">
                    <div class="parent-social">
                        <ul class="social-parent">
                            <div id="facebook">
                                <i class="fab fa-facebook"></i>
                            </div>
                            <div id="pinterest">
                                <i class="fab fa-pinterest-p"></i>
                            </div>
                            <div id="twitter">
                                <i class="fab fa-twitter"></i>
                            </div>
                            <div id="google">
                                <i class="fab fa-google-plus-g"></i>
                            </div>
                            <div id="instagram">
                                <i class="fab fa-instagram"></i>
                            </div>
                            </div>
                            <p>All rights reserved. &copy 2020</p>
                    </div>
            </section>
        </footer>
</body>
</html>